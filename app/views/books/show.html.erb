<%= render 'users/list', user: @user, book_new: @book_new %>
<div class="col-xs-9">
	<h2>Book detail</h2>
	<table class="table table-striped">
		     	<tbody>
		     		<tr>
		     			<td><%= link_to(user_path(@user)) do %>
		     				<%= attachment_image_tag @user, :profile_image, fallback: "no_image.png", size: "50x50" %><br><%=  @user.name %>
		     				<% end %></td>
		     			<td><%= @book.title %></td>
		     			<td><%= @book.body %></td>
		     			<% if @user.id == current_user.id %>
		     			<td><%= link_to (edit_book_path(@book)), class: "btn btn-success btn-sm" do %>
		     			Edit <% end %> </td>
		     			<td><%= link_to (book_path(@book)),  method: :delete, class: "btn btn-danger btn-sm" do %> 
		     				Destroy <% end %> </td>
		     			<% end %>
		     		</tr>
		     	</tbody>
			</table>
</div>