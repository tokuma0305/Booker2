<div class="container">
	<div class="row">
		<div class="col-lg-2">
			<h2>User info</h2>
			<table>

				<%= form_for(@user, url: user_path(@user)) do |f| %>
				<% if @user.errors.any? %>
			     <h2><%= @user.errors.count %>error</h2>
			      <% @user.errors.full_messages.each do |message| %>
			        <%= message %>
			      <% end %>
			  <% end %>
				<tbody>
				<tr>
					<td>Name</td>
					<td><%= f.text_field :name %> </td>
				</tr>
				<tr>
				  <td>Image</td>
				  <td></td>
				</tr>
				<tr>
				  <td><%= f.attachment_field :profile_image %></td>
				  <td></td>
				</tr>
				<tr>
					<td>Introduction</td>
					<td><%= f.text_area :introduction %></td>
				</tr>
				<tr>
					<td><%= f.submit "Update User" %></td>
					<td></td>
				</tr>
			</tbody>
			<% end %>
			</table>
	</div>
	<div class="col-lg-10">
	</div>
</div>
</div>