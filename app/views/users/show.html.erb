<%= render 'users/list', user: @user, book_new: @book_new %>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-striped">
		     <thead>
		     	<tr>
		     		<th></th>
		     		<th>Title</th>
		     		 <th>Opinion</th>
		     		</tr>
		     	</thead>
		     	<tbody>
		     		<% @books.each do |book| %>
		     		<tr>
		     			<td><%= attachment_image_tag @user, :profile_image, fallback: "no_image.png", size: "50x50" %></td>
		     			<td><%= link_to book.title, book_path(book) %></td>
		     			<td><%= book.body %></td>
		     		</tr>
		     		<% end %>
		     	</tbody>
			</table>
		</div>
	</div>
</div>